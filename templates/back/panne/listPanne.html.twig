								}

								}
								});
								}
								</script>
							#}	

							</td>
						</tr>
					{% endfor %}
				</tbody>
				</table>
			</div>
			<!-- /.card-body -->
		</div>

					</div>
					<!-- /.card-body -->
				</div>
				<!-- /.card -->
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
	</div>
	<!-- ./wrapper -->
