{% extends "back/base.html.twig" %}


{% block ContentTitle %}
	Editer une permition 
{% endblock %}


{% block Content %}
	<section class="content">
		<div class="container-fluid">
			<div
				class="row">
				<!-- left column -->
				<div
					class="col-md-12">
					<!-- jquery validation -->
					<div class="card card-primary">
						<div class="card-header bg-light">
							<h3 class="card-title">Editer la permition de 
								<span class="font-bold text-capitalize tex">
								{{client.Nom}}  {{client.Prenom}}
								</span>
							</h3>
						</div>
						<div class="card-body mx-auto">
							<form action="post" action="editListNoirPermition">
                                <div class="form-group">
									<label for="permition" class="text-danger">
										RED client</label>
									<select class="form-control" name="permition">
										<option value="0">NO</option>
										<option value="1">YES</option>
									</select>
								</div>
                                <button type="submit" class="card-footer bg-warning btn btn-warning uppercase mt-15 bg-blue-500 text-info-100 text-lg font-extrabold py-4 px-8 rounded-3xl">
                                    Valider Permition
                                </button>
                            </form>
							
						</div>

					</div>
					<!-- /.card -->
				</div>
				<!--/.col (left) -->
				<!-- right column -->
				<div class="col-md-6"></div>
				<!--/.col (right) -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>

{% endblock %}

