{% extends "back/base.html.twig" %}

{% block linksHeader %}

{% endblock %}

{% block ContentTitle %}
	Liste des Marque
{% endblock %}

{% block Content %}

		<div class="container-fluid">
			<div class="d-flex justify-content-between mb-4">
				<div>
                        <a href="{{path('CreateMarque')}}" class="btn btn-primary">
						<i class="fa fa-plus-circle mr-1" aria-hidden="true"></i>
						Ajouter une marque</a>
				</div>

			</div>

			<div class="row">
				<div class="col-12">
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Marques</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
						
						{% for marque in marques %}
                            <div class="row mb-2 shadow p-3 mb-5 bg-body rounded ">
									{% if marque.LogoMarque == null %}
										<div class="col">
											<div  class="position-relative p-3 bg-primary" style="background-image: url("{{asset('/images/LogoCar.jpg')}}"); height: 180px" >
												<div class="ribbon-wrapper ribbon-lg">
													<div class="ribbon bg-success text-lg" id="marque">
														{{marque.marque}}
													</div>
												</div>
												<br/>
												<small class="text-bold">{{marque.marque}}</small>
											</div>
										</div>
									{% else %}
										<div class="col-sm-8 ">
											<div class="position-relative" style="height: 180px">
												<div class="d-flex ">
													<img class="ml-5 mr-4 mt-4 rounded-circle" style="width: 150px; height: 150px;box-shadow: -1px -1px 10px 1px red, 1px 1px 11px 1px blue" src="{{asset('assets/uploads/vehiculeMarque/'~marque.LogoMarque)}}" alt="logo" class="img-fluid">
														<p class="h1 pt-6 mt-6 ml-2 " style="font-family: 'Bowlby One SC', cursive;text-shadow: 1px 1px 1px red;">{{marque.marque}}</p>
												</div>
												
												
											</div>
										</div>

										<div class="div col-sm-4">
											<div class="row ml-10 pt-6 mt-6">
												<a href="{{path('EditMarque', {"id":marque.id})}}" class="btn btn-info mr-3">Editer</a>
												<a href="{{path('DeleteMarque', {"id":marque.id})}}" class="btn btn-danger deleteBtn" id="">Suprimmer</a>
											</div>
										</div>
									{% endif %} 
								</div>
                        {% endfor %}
						
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
<!-- ./wrapper -->
