<html lang="en">
	<head>
		<title>Register</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{asset('loginClient/css/style.css')}}">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


	</head>
	<body class="img js-fullheight" style="background-image: url(../loginClient/images/lg1.jpg);">
		<section class="ftco-section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-6 text-center mb-5">
						<h2 class="heading-section"> Registration Form</h2>
					</div>
				</div>
				<div class="row justify-content-center">
					<div class="col-md-6 col-lg-4">
						<div class="login-wrap p-0">
							<h3 class="mb-4 text-center">Join Us</h3>
							<form class="signin-form" method="post">
                                <div class="row ">
                                    <div class="col">
                                        <div class="form-group">
                                            {% if erreur is defined %}
                                            <div class="alert alert-danger alert-dismissible">
                                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                                <h4>
                                                    <i class="icon fa fa-ban"></i>
                                                    Erreur !!</h4>
                                                {{ erreur }}
                                            </div>
                                            {% endif %}
                                            {% if success is defined %}
                                                <div class="alert alert-success alert-dismissible">
                                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                                    <h4>
                                                        <i class="icon fa fa-check"></i>
                                                        Succ√©s
                                                    </h4>
                                                    {{ success }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <input {% if Prenom is defined %}value="{{ Prenom }}"{% endif %} type="text" class="form-control" name="Prenom" placeholder="Enter FirstName" required>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-group">
                                        <input {% if Nom is defined %}value="{{ Nom }}"{% endif %} type="text" class="form-control" name="Nom" placeholder="Enter LastName" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input {% if Email is defined %}value="{{ Email }}"{% endif %} type="text" class="form-control" name="Email" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input {% if  Password is defined %}value="{{ Password }}"{% endif %} id="password-field" type="password" class="form-control" name="Password" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <input {% if Cin is defined %}value="{{ Cin }}"{% endif %} type="text" class="form-control" name="Cin" placeholder="Cin" required>
                            </div>
                            <div class="form-group">
                                <input {% if Phone  is defined %}value="{{ Phone }}"{% endif %} id="password-field" type="text" class="form-control" name="telephone" placeholder="Phone Number" required>
                            </div>
                            <div class="form-group">
                                <select {% if Sexe is defined %}value="{{ Sexe }}"{% endif %} class="form-control" name="Sexe">
                                    <option class="text-warning" value="Feminin " >Feminin</option>
                                    <option class="text-warning" value="Masculin">Masculin</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input {% if Adresse is defined %}value="{{ Adresse }}"{% endif %} type="text" class="form-control" name="Adresse" placeholder="Adresse" required></input>
                            </div>
                            <div class="form-group">
                                <input {% if DateNaissance is defined %} value="{{ DateNaissance }}"{% endif %} type="Date" name="DateNaissance" class="form-control" id="DateNaissance" required>
                            </div>

								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary submit pt-3 px-3">Sign Up</button>
								</div>
							</form>
                             <div class="form-group mt-4">
                                <p class="w-100 text-center">You already have an account? <a href="{{path('loginClient')}}"> Sign In </a> </p>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<script src="{{asset('loginClient/js/jquery.min.js')}}"></script>
		<script src="{{asset('loginClient/js/popper.js')}}"></script>
		<script src="{{asset('loginClient/js/bootstrap.min.js')}}"></script>
		<script src="{{asset('loginClient/js/main.js')}}"></script>

	</body>
</html>

