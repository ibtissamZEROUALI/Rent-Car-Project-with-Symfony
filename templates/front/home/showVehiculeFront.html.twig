{% extends "front/base.html.twig" %}

{% block body %}
<div class="container-xxl py-5">
	<div class="container">
		<div class="sm:w-3/5 w-4/5 mx-auto text-center">
			<div class="container-fluid">
				<div class="card-header" style="">
					<div class="card-body">
						<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
							<h6 class="section-title bg-white text-center text-danger px-3">Vehicle Informations</h6>
							<h1 class="mb-5">{{vehicule.Marque|capitalize}} {{vehicule.Model}}</h1>
						</div>
						<div class="row">
						<div class="col">
						<div id="carouselExampleIndicators" class="carousel slide accent-blue" data-ride="carousel">
								<ol class="carousel-indicators">
									<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
									<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
									<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
								</ol>
								<div class="carousel-inner">
									<div class="carousel-item active shadow-lg p-3 mb-5 bg-white rounded">
										<img class="d-block w-100" src="{{asset('back/bundle/dist/img/1.jpg')}}" alt="First slide">
									</div>
									<div class="carousel-item shadow-lg p-3 mb-5 bg-white rounded ">
										<img class="d-block w-100" src="{{asset('back/bundle/dist/img/2.jpg')}}" alt="Second slide">
									</div>
									<div class="carousel-item shadow-lg p-3 mb-5 bg-white rounded">
										<img class="d-block w-100" src="{{asset('back/bundle/dist/img/3.jpg')}}" alt="Third slide">
									</div>
								</div>
								<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="sr-only">Previous</span>
								</a>
								<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="sr-only">Next</span>
								</a>
							</div>
						</div>
							
						</div>
						<div class="row mx-auto mt-3" >
						<div class="col-2"></div>
							<div class="col-sm-4 text-dark font-weight-bold " style="text-shadow: 1px 1px 1px red;font-weight:bolder; font-size:120%;" >
								<div class="row">Description :</div>
								<div class="row">Brand :</div>
								<div class="row">Type :</div>
								<div class="row">Capacity :</div>
								<div class="row">Model :</div>
								<div class="row">Price per day :</div>
								<div class="row">Availablity :</div>
							</div>
						<div class="col-sm-4 font-weight-normal" style="font-weight:normal; font-size:120%;">
								<div class="row">{{vehicule.Description}}</div>
								<div class="row">{{vehicule.Marque}}</div>
								<div class="row">{{vehicule.Type}}</div>
								<div class="row">{{vehicule.Capacity}}</div>
								<div class="row">{{vehicule.ModelYear}}</div>
								<div class="row">{{vehicule.PrixDay}}</div>
								<div class="row">{{vehicule.Diponibilite}}</div>
							</div>
							<div class="col-2"></div>
						</div>
						<div class="row mx-auto mt-3">
						<div class="col">
							<a href="{{path('BookVehicule',{"id":vehicule.id})}}" class="btn btn-primary button  ">
								Book now
							</a>
						</div>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
.button {
  border: none;
  color: white;
  padding: 20px;
  text-align: center;
  text-decoration: none;
background-color: #FFA500;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
border-radius: 12px;
transition-duration: 0.4s;
box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);


}
.button:hover {
border: 2px solid #FFD700;

	text : dark;
background-color: #FF6347; /* Green */


  	color: white;
	box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);

}</style>
{% endblock %}